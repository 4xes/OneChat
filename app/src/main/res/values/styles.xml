<resources>

    <style name="Kit"/>

    <style name="Kit.Ripple">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/actionBarItemBackground</item>
    </style>

    <style name="Kit.FadeEdges">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">none</item>
        <item name="android:requiresFadingEdge">horizontal</item>
    </style>

    <style name="Action"/>

    <style name="Action.Wrapper">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Action.Icon" parent="Kit.Ripple">
        <item name="android:padding">@dimen/medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
